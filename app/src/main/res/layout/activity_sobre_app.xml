<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_sobre_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_degrade"
    tools:context="br.com.fafeltech.somdanoite.activity.SobreAppActivity">

    <include android:id="@+id/toolbar_sobre_app" layout="@layout/include_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:id="@+id/linear1"
        android:layout_below="@+id/toolbar_sobre_app"
        android:gravity="center_vertical"
        android:background="@drawable/fundo_caixa_texto"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:padding="8dp"
            android:gravity="center_vertical|center_horizontal">

            <com.pkmmte.view.CircularImageView
                android:contentDescription="@string/imagem_evento"
                android:layout_width="120dp"
                android:layout_height="102dp"
                android:id="@+id/app_imagem"
                android:src="@mipmap/ic_launcher"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:border="true"
                app:border_color="#EEEEEE"
                app:border_width="2dp"
                app:shadow="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"  >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/app_title"
                android:padding="4dp"
                android:textStyle="italic"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/versao_app"
                android:padding="4dp"
                android:textStyle="italic"
                android:textColor="@color/white"
                />


            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="12sp"-->
                <!--android:text="@string/email"-->
                <!--android:padding="4dp"-->
                <!--android:textStyle="italic"-->
                <!--android:textColor="@color/white"-->
                <!--/>-->

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:layout_below="@+id/linear1"
        android:background="@drawable/fundo_caixa_texto"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@string/dev_by"
            android:paddingLeft="8dp"
            android:padding="4dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:padding="8dp"
                android:gravity="center_vertical|center_horizontal">

                <com.pkmmte.view.CircularImageView
                    android:layout_width="120dp"
                    android:layout_height="102dp"
                    android:src="@drawable/logo_tech_maior"
                    android:padding="8dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/imagem_evento"
                    android:id="@+id/evento_imagem"
                    android:scaleType="centerCrop"
                    app:border="true"
                    app:border_color="#EEEEEE"
                    app:border_width="2dp"
                    app:shadow="true"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/fafel_nome"
                    android:textColor="@color/white"
                    android:padding="4dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="@string/fafel_descricao"
                    android:textColor="@color/white"
                    android:padding="4dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="@string/fafel_contato"
                    android:padding="4dp"
                    android:textColor="@color/white"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
